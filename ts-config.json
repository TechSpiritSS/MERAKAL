{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        ".prisma/client/*"
      ]
    }
  },
  "include": [
    "index.ts",
    ".prisma/client"
  ],
  "exclude": [
    "node_modules"
  ]
}